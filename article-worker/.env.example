# Temporal Configuration
TEMPORAL_ADDRESS=europe-west3.gcp.api.temporal.io:7233
TEMPORAL_NAMESPACE=quickstart-quest.zivkb
TEMPORAL_API_KEY=your-temporal-api-key-here
TEMPORAL_TASK_QUEUE=quest-article-queue

# Database
DATABASE_URL=postgresql://user:password@host:5432/database

# AI Services
GOOGLE_API_KEY=your-google-api-key
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Search & Research
SERPER_API_KEY=your-serper-api-key
EXA_API_KEY=your-exa-api-key
FIRECRAWL_API_KEY=your-firecrawl-api-key

# Image Services
REPLICATE_API_TOKEN=your-replicate-token
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name
FLUX_API_KEY=your-flux-api-key

# Knowledge Graph
ZEP_API_KEY=your-zep-api-key

# Application Settings
ENVIRONMENT=development
DEFAULT_APP=placement
LOG_LEVEL=info
AUTO_PUBLISH=false

# Article Settings
DEFAULT_WORD_COUNT=1500
MIN_WORD_COUNT=500
MAX_WORD_COUNT=5000

# Image Settings
GENERATE_FEATURED_IMAGES=true
GENERATE_SEQUENTIAL_IMAGES=true
FLUX_MODEL=kontext-max
MIN_CONTENT_IMAGES=3
MAX_CONTENT_IMAGES=5

# Cost Limits
MAX_COST_PER_ARTICLE=0.30
ENABLE_COST_ALERTS=true

# Playwright Settings
PLAYWRIGHT_BROWSER=chromium
PLAYWRIGHT_HEADLESS=true
