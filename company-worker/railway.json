{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "bash railway-build.sh",
    "watchPatterns": ["company-worker/**"]
  },
  "deploy": {
    "startCommand": "python worker.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
