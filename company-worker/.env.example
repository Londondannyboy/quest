# ===================================
# Temporal Configuration
# ===================================
TEMPORAL_ADDRESS=europe-west3.gcp.api.temporal.io:7233
TEMPORAL_NAMESPACE=quickstart-quest.zivkb
TEMPORAL_API_KEY=your-temporal-api-key-here
TEMPORAL_TASK_QUEUE=quest-company-queue

# ===================================
# Database
# ===================================
DATABASE_URL=postgresql://user:pass@host:5432/dbname?sslmode=require

# ===================================
# AI Services
# ===================================
# Google Gemini (for Pydantic AI)
GOOGLE_API_KEY=your-gemini-api-key-here

# OpenAI (alternative for Pydantic AI)
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic Claude (alternative for Pydantic AI)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ===================================
# Search & Research APIs
# ===================================
# Serper.dev (Google search with geo-targeting)
SERPER_API_KEY=your-serper-api-key-here

# Exa (company research)
EXA_API_KEY=your-exa-api-key-here

# Firecrawl (backup web scraping)
FIRECRAWL_API_KEY=your-firecrawl-api-key-here

# ===================================
# Image Services
# ===================================
# Replicate (image generation with Flux Schnell)
REPLICATE_API_TOKEN=your-replicate-token-here

# Cloudinary (image hosting)
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# ===================================
# Knowledge Graph & Memory
# ===================================
# Zep Cloud (knowledge graph + embeddings)
ZEP_API_KEY=your-zep-api-key-here

# ===================================
# FastAPI Configuration
# ===================================
# API Security
API_KEY=company-worker-secret-key-change-this

# Environment
ENVIRONMENT=production
LOG_LEVEL=info

# ===================================
# Application Settings
# ===================================
# Default settings
DEFAULT_APP=relocation
AUTO_PUBLISH=true

# Research settings
CONFIDENCE_THRESHOLD=0.7
MAX_RESEARCH_ATTEMPTS=2

# Image settings
GENERATE_FEATURED_IMAGES=true
LOGO_SIZE=400x400

# ===================================
# Optional: Playwright (for Crawl4AI)
# ===================================
# PLAYWRIGHT_BROWSER=chromium
# PLAYWRIGHT_HEADLESS=true

# ===================================
# Cost Limits (optional)
# ===================================
MAX_COST_PER_COMPANY=0.20
ENABLE_COST_ALERTS=true
